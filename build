        LANG_SHOW_INFO_INSTALL1=" Máy chủ của bạn sẽ cài đặt các dịch vụ sau:"
        LANG_SHOW_INFO_INSTALL2=" PHP: Tất_cả_các_phiên_bản"
        LANG_SHOW_INFO_INSTALL3=" Mới_nhất"
