        LANG_CHECK_OPTIONS7="sh ${0} httpd   : Chỉ cài đặt Apache"
        LANG_CHECK_OPTIONS8="sh ${0} nginx   : Chỉ cài đặt nginx"
        LANG_CHECK_OPTIONS9="sh ${0} csf     : Chỉ cài đặt csf"
